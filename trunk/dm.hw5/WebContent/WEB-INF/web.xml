<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">

	<display-name>
	dm.hw5
	</display-name>
    
<servlet>
	<servlet-name>login</servlet-name>
	<servlet-class>dmhw.servlet.LoginControllerServlet</servlet-class>
</servlet>
<servlet>
	<servlet-name>logout</servlet-name>
	<servlet-class>dmhw.servlet.LogoutControllerServlet</servlet-class>
</servlet>
<servlet>
	<servlet-name>newuser</servlet-name>
	<servlet-class>dmhw.servlet.UserAddControllerServlet</servlet-class>
</servlet>
<servlet>
	<servlet-name>boardview</servlet-name>
	<servlet-class>dmhw.servlet.BoardViewControllerServlet</servlet-class>
</servlet>
<servlet>
	<servlet-name>newmessage</servlet-name>
	<servlet-class>dmhw.servlet.MessageAddControllerServlet</servlet-class>
</servlet>
<servlet>
	<servlet-name>deletemessage</servlet-name>
	<servlet-class>dmhw.servlet.DeleteMessageControllerServlet</servlet-class>
</servlet>

<servlet-mapping>
	<servlet-name>login</servlet-name>
	<url-pattern>/login</url-pattern>
</servlet-mapping>
<servlet-mapping>
	<servlet-name>logout</servlet-name>
	<url-pattern>/logout</url-pattern>
</servlet-mapping>
<servlet-mapping>
	<servlet-name>newuser</servlet-name>
	<url-pattern>/newuser</url-pattern>
</servlet-mapping>
<servlet-mapping>
	<servlet-name>boardview</servlet-name>
	<url-pattern>/boardview</url-pattern>
</servlet-mapping>
<servlet-mapping>
	<servlet-name>newmessage</servlet-name>
	<url-pattern>/newmessage</url-pattern>
</servlet-mapping>
<servlet-mapping>
	<servlet-name>deletemessage</servlet-name>
	<url-pattern>/deletemessage</url-pattern>
</servlet-mapping>

	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>
    <taglib>
    	<taglib-uri>http://java.sun.com/jstl/core</taglib-uri>
    	<taglib-location>/WEB-INF/tld/c.tld</taglib-location>
    </taglib>
    
    <taglib>
    	<taglib-uri>http://java.sun.com/jsp/jstl/fmt</taglib-uri>
    	<taglib-location>/WEB-INF/tld/fmt.tld</taglib-location>
    </taglib>
</web-app>
